generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id            String       @id
  email         String?      @unique
  name          String
  onboarded     Boolean      @default(false)
  passwordHash  String?
  googleId      String?      @unique
  sleeperId     String?      @unique
  leagues       UserLeague[]
  sessions      Session[]

  createdAt     DateTime     @default(now())

  @@map("users")
}

model Team {
  id        Int      @id
  ownerId   String  
  leagueId  String
  teamName  String
  avatar    String? 
  players   String[] 

  @@map("teams")
}

model League {
  id            String       @id
  name          String
  type          String
  avatar        String?
  users         UserLeague[]

  @@map("leagues")
}

model UserLeague {
  id        String  @id @default(cuid())
  userId    String
  leagueId  String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  league    League  @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  @@unique([userId, leagueId])

  @@map("user_leagues")
}

model Player {
  playerId    String @unique @id
  firstName   String
  lastName    String
  position    String

  @@map("players")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}
